<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site">
	<name>feuerwehrj4</name>
	<version>1.0</version>
	<creationDate>February 2022</creationDate>
	<author>sinci</author>
	<authorEmail>joomla.sinci@gmail.com</authorEmail>
	<copyright>(C) 2017 Open Source Matters, Inc.</copyright>
	<license>http://www.gnu.org/licenses/gpl.html GNU/GPL</license>
	<description>Feuerwehr Joomla 4 Template</description>
	<files>
		<folder>js</folder>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>language</folder>
		<filename>template_preview.png</filename>
		<filename>template_preview.jpg</filename>
		<filename>template_thumbnail.png</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<positions>
		<position>toolbar-left</position>
		<position>toolbar-right</position>
		<position>logo</position>
		<position>menu</position>
		<position>search</position>
		<position>header</position>
		<position>breadcrumbs</position>
		<position>main-top</position>
		<position>main-bottom</position>
		<position>sidebar-right</position>
		<position>sidebar-left</position>
		<position>mobile</position>
		<position>footer-a</position>
		<position>footer-b</position>
		<position>footer-c</position>
		<position>footer-menu</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="de-DE">de-DE/de-DE.tpl_feuerwehrj4.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="brand" type="radio" label="TPL_FEUERWEHRJ4_BRAND_LABEL" default="1" layout="joomla.form.field.radio.switcher" filter="boolean">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="logoFile" type="media" default="" label="TPL_FEUERWEHRJ4_LOGO_LABEL" showon="brand:1" />
				<field name="siteTitle" type="text" default="" label="TPL_FEUERWEHRJ4_TITLE" filter="string" showon="brand:1" />
				<field name="siteDescription" type="text" default="" label="TPL_FEUERWEHRJ4_TAGLINE_LABEL" description="TPL_FEUERWEHRJ4_TAGLINE_DESC" filter="string" showon="brand:1" />
				<field name="faviconFile" type="media" default="" label="TPL_FEUERWEHRJ4_FAVICON" description="TPL_FEUERWEHRJ4_FAVICON_DESC"/>
				<field name="appletouchicon" type="media" default="" label="TPL_FEUERWEHRJ4_APPLE_TOUCH_ICON" description="TPL_FEUERWEHRJ4_APPLE_TOUCH_ICON_DESC"/>
				<field type="spacer" name="myspacer" label="Slideshow parameters" />
				<field name="overlaySlideshowPosition" type="list" label="TPL_FEUERWEHRJ4_SLIDESHOW-OVERLAY-POSITION" >
					<option value="uk-position-top">TPL_FEUERWEHRJ4_SLIDESHOW-OVERLAY-POSITION-TOP</option>
					<option value="uk-position-bottom">TPL_FEUERWEHRJ4_SLIDESHOW-OVERLAY-POSITION-BOTTOM</option>
				</field>
				<field name="overlaySlideshowMove" type="list" label="TPL_FEUERWEHRJ4_SLIDESHOW-OVERLAY-MOVE" >
					<option value="uk-transition-slide-top">TPL_FEUERWEHRJ4_SLIDESHOW-OVERLAY-MOVE-TOP</option>
					<option value="uk-transition-slide-bottom">TPL_FEUERWEHRJ4_SLIDESHOW-OVERLAY-MOVE-BOTTOM</option>
				</field>
				<field name="slideshowRatio" type="text" default="16:9" label="TPL_FEUERWEHRJ4_SLIDESHOWRATIO" filter="string" />
				<field name="slideshowIntervall" type="text" default="3500" label="TPL_FEUERWEHRJ4_SLIDESHOWINTERVALL" filter="string" />
			</fieldset>
		</fields>
	</config>
</extension>
